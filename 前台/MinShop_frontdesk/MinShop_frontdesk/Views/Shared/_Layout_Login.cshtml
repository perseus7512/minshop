                <a class="navbar-brand" href="~/home/index">
                    <button class="btn btn-link nav-link" type="button">
                        <img src="~/images/Layout/logo01.png" alt="logo">
                    </button>
                </a>
                <form class="form-inline justify-content-center" method="post" action="~/home/Search">
                    <input class="form-control mr-2" type="text" placeholder="尋找商品" aria-label="Search"
                           style="width: 300px;" id="searchInput" name="searchInput">
                    <button class="btn btn-outline-success" type="submit" id="searchButton" onclick="addRecord()">&nbsp搜尋</button>
                </form>
                <ul id="recordList">
                    <!-- 這裡將顯示新增的紀錄 -->
                </ul>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="~/home/ShoppingCar" class="btn btn-link nav-link">
                                <img src="~/images/Layout/icon_cart.png" alt="icon_cart" style="width:50px">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/home/history" class="btn btn-link nav-link">
                                <img src="~/images/Layout/icon_history.png" alt="icon_history" style="width:50px">
