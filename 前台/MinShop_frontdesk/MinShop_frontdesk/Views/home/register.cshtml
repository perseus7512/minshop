<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    body {
        padding: 0;
        margin: 0;
    }

    .register {
        background: rgba(0,0,0, 0.5);
        text-align: center;
        color: #fff;
        font-family: "微軟正黑體",sans-serif;
        border-radius: 10px;
        padding: 30px;
        width: 60%;
    }

        .register i {
            font-size: 100px;
            margin: 20px auto;
        }

    input {
        font-size: 16px;
        font-family: "微軟正黑體",sans-serif;
        padding: 5px;
        border-radius: 4px;
        margin: 0 auto;
        display: block;
        width: 100%;
    }

    button {
        border: 0;
        padding: 6px 12px;
        margin: 20px auto;
        font-size: 18px;
        font-family: "微軟正黑體",sans-serif;
        background: #fff;
        color: #000;
    }

    @@media (max-width:450px) {
        .register {
            width: 70%;
        }
    }
</style>
<div class="container d-flex justify-content-center align-items-center">
    <form method="post" action="~/home/register" class="register">
        <h1>註冊</h1>
        <i class="fa fa-user-circle-o"></i>
        <h2>姓名</h2>
        <input type="text" placeholder="請輸入姓名" name="name" id="name">
        <h2>電子郵件</h2>
        <input type="email" placeholder="請輸入電子郵件" name="email" id="email">
        <h2>密碼</h2>
        <input type="password" placeholder="請輸入密碼" name="pass1" id="pass1" minlength="8" maxlength="16">
        <h2>確認密碼</h2>
        <input type="password" placeholder="請再次輸入密碼" name="pass2" id="pass2" minlength="8" maxlength="16">
        <button type="submit" onclick="location.href=('~/home/Login')">取消</button>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <button type="submit">確認</button>
    </form>
</div>
<script>
    var pass1 = document.querySelector('#pass1');
    var pass2 = document.querySelector('#pass2');
    var btn = document.querySelector('#btn');
    btn.addEventListener('click', function(event) { // 传递事件对象
        var email = document.querySelector('#email');
        if (!email.checkValidity()) { // 如果邮箱格式不正确
            alert('电子邮件格式不正确');
            event.preventDefault(); // 阻止表单提交
            return; // 退出函数
        }
        if(pass1.value.length < 8 || pass1.value.length > 16) { // 使用正确的比较运算符
            alert('密碼不可少於8,也不可大於16');
            event.preventDefault();
        }else{    
            if (pass1.value != pass2.value) {
                alert('密碼不相同,請重新輸入');
                event.preventDefault();
            }
        }
    });
</script>

