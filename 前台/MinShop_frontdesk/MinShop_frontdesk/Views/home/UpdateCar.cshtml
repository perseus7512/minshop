@model MinShop_frontdesk.Models.shoppingCart


<h2>修改購物車</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.cartId)
        <div class="form-group">
            <label>商品編號</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.productId)
            </div>
        </div>

        <div class="form-group">
            <label>商品名稱</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.name)
            </div>
        </div>

        <div class="form-group">
            <label>單件價格</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.price)
            </div>
        </div>

        <div class="form-group">
            <label>數量</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control", min = "1" } })
                @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary" id="btn">送出</button>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                @Html.ActionLink("回首頁", "Index", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}