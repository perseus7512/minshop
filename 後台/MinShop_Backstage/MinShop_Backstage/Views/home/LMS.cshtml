@model IEnumerable<MinShop_Backstage.Models.shoppingCart>
<h2>物流管理</h2>

<div class="form-row">
    <div class="form-group col-md-2">
        <button type="button" class="btn btn-info btn-lg btn-block" onclick="searchOrders('unpaid')">未出貨</button>
    </div>
    <div class="form-group col-md-2">
        <button type="button" class="btn btn-info btn-lg btn-block" onclick="searchOrders('processing')">運送中</button>
    </div>
    <div class="form-group col-md-2">
        <button type="button" class="btn btn-info btn-lg btn-block" onclick="searchOrders('preparing')">已抵達</button>
    </div>
    <div class="form-group col-md-2">
        <input type="text" class="form-control-lg" id="orderNumber" placeholder="請輸入訂單編號">
    </div>
    <div class="form-group col-md-2">
        <button type="submit" class="btn btn-info btn-lg btn-block" onclick="searchOrders('custom')">搜尋</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">訂單編號</th>
            <th scope="col">物流狀態</th>
            <th scope="col">預計送達時間</th>
        </tr>
    </thead>

    <tbody>

    </tbody>
</table>